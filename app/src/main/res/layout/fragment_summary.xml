<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".fragments.SummaryFragment">

    <EditText
        android:id="@+id/notes_summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set this Note Title" />


    <EditText
        android:id="@+id/notes_summary_topics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set all topics separated by comma" />

    <TextView
        android:id="@+id/notes_summary_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/hello_blank_fragment" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/notes_summary_save_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            android:layout_gravity="bottom|end"
            android:layout_margin="50dp"
            android:src="@drawable/ic_save" />
    </FrameLayout>


</LinearLayout>


