<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".fragments.SummaryFragment">

    <EditText
        android:id="@+id/notes_summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set this Note Title" />


    <EditText
        android:id="@+id/notes_summary_topics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set all topics separated by comma" />

    <TextView
        android:id="@+id/notes_summary_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/hello_blank_fragment" />

</LinearLayout>


